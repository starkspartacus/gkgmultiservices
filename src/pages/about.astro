<style>
  main {
    margin-top: 70px;
  }

  .hero-about {
    background: 
      linear-gradient(135deg, var(--color-primary), #1e40af80),
      url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1200&q=80') center/cover no-repeat;
    color: white;
    padding: var(--spacing-2xl) 0;
    text-align: center;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 800px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.9);
  }

  /* Section PDG */
  .ceo-section {
    padding: var(--spacing-2xl) 0;
    background: var(--color-bg-light);
  }

  .ceo-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .ceo-image img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .ceo-message h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
  }

  .ceo-signature {
    margin-bottom: var(--spacing-lg);
  }

  .ceo-signature h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-xs);
  }

  .ceo-title {
    color: var(--color-accent);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .ceo-message blockquote {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text);
    font-style: italic;
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-lg);
    background: white;
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-sm);
  }

  /* Section Histoire avec Timeline */
  .history-section {
    padding: var(--spacing-2xl) 0;
  }

  .timeline {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-xl) 0;
  }

  .timeline::after {
    content: '';
    position: absolute;
    width: 6px;
    background: var(--color-primary);
    top: 0;
    bottom: 0;
    left: 50%;
    margin-left: -3px;
    border-radius: 3px;
  }

  .timeline-item {
    padding: 10px 40px;
    position: relative;
    width: 50%;
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.6s ease;
  }

  .timeline-item.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline-item::after {
    content: '';
    position: absolute;
    width: 25px;
    height: 25px;
    right: -17px;
    background-color: white;
    border: 4px solid var(--color-primary);
    top: 15px;
    border-radius: 50%;
    z-index: 1;
  }

  .timeline-item.left {
    left: 0;
  }

  .timeline-item.right {
    left: 50%;
  }

  .timeline-item.right::after {
    left: -16px;
  }

  .timeline-content {
    padding: var(--spacing-lg);
    background-color: white;
    position: relative;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
  }

  .timeline-content:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .timeline-date {
    position: absolute;
    top: -15px;
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--border-radius-md);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .timeline-item.left .timeline-date {
    right: var(--spacing-lg);
  }

  .timeline-item.right .timeline-date {
    left: var(--spacing-lg);
  }

  .timeline-image {
    margin: var(--spacing-md) 0;
  }

  .timeline-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: var(--border-radius-md);
  }

  .timeline-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
  }

  .timeline-content p {
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .values-section {
    background: var(--color-bg-light);
    padding: var(--spacing-2xl) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .section-header p {
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .value-card {
    text-align: center;
    padding: var(--spacing-xl);
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
  }

  .value-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .value-icon {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .value-card h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .team-section {
    padding: var(--spacing-2xl) 0;
  }

  .team-member {
    text-align: center;
    background: white;
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-xl);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
  }

  .team-member:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .member-image {
    margin-bottom: var(--spacing-md);
  }

  .member-image img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
  }

  .member-info h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xs);
  }

  .member-role {
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
  }

  .member-bio {
    font-size: 0.95rem;
    color: var(--color-text-light);
  }

  .numbers-section {
    background: var(--color-bg-light);
    padding: var(--spacing-2xl) 0;
  }

  .numbers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-xl);
    text-align: center;
  }

  .number-item {
    background: white;
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .number-label {
    color: var(--color-text-light);
    font-weight: 500;
  }

  .cta-section {
    padding: var(--spacing-2xl) 0;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }

  .cta-content p {
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xl);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .ceo-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .ceo-image img {
      height: 300px;
    }

    .ceo-message h2 {
      font-size: 2rem;
    }

    .timeline::after {
      left: 31px;
    }

    .timeline-item {
      width: 100%;
      padding-left: 70px;
      padding-right: 25px;
    }

    .timeline-item.right {
      left: 0%;
    }

    .timeline-item.left::after,
    .timeline-item.right::after {
      left: 15px;
    }

    .timeline-item.left .timeline-date,
    .timeline-item.right .timeline-date {
      left: 70px;
      right: auto;
    }

    .story-text h2 {
      font-size: 2rem;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .cta-content h2 {
      font-size: 2rem;
    }

    .numbers-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }

    .number {
      font-size: 2rem;
    }
  }
</style>

<script>
  // Animation de la timeline au scroll
  const observerOptions = {
    threshold: 0.5,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate');
      }
    });
  }, observerOptions);

  // Observer tous les éléments de la timeline
  document.addEventListener('DOMContentLoaded', () => {
    const timelineItems = document.querySelectorAll('.timeline-item');
    timelineItems.forEach(item => {
      observer.observe(item);
    });
  });
</script>