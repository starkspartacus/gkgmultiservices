---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Services - ReportPro" description="Découvrez nos services de reportage événementiel, photographie corporate, production vidéo et documentaire professionnel.">
  <Header />
  
  <main>
    <section class="hero-services">
      <div class="container">
        <div class="hero-content">
          <h1>Nos services</h1>
          <p class="hero-subtitle">
            Une expertise complète pour tous vos besoins en reportage et photographie professionnelle
          </p>
        </div>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="services-section">
      <div class="container">
        <div class="services-grid">
          <!-- Reportage Événementiel -->
          <div class="service-detail" id="evenementiel">
            <div class="service-content">
              <div class="service-header">
                <div class="service-icon">
                  <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                    <circle cx="12" cy="13" r="4"></circle>
                  </svg>
                </div>
                <div>
                  <h2>Reportage événementiel</h2>
                  <p class="service-tagline">Capturer l'essence de vos événements professionnels</p>
                </div>
              </div>
              
              <div class="service-description">
                <p>
                  Nos équipes spécialisées documentent vos événements avec un œil professionnel, 
                  capturant les moments clés, l'ambiance et les émotions qui font le succès de vos manifestations.
                </p>
              </div>

              <div class="service-features">
                <h3>Nos prestations</h3>
                <ul>
                  <li>Conférences et séminaires d'entreprise</li>
                  <li>Salons professionnels et foires</li>
                  <li>Lancements de produits</li>
                  <li>Galas et événements de prestige</li>
                  <li>Conventions et assemblées générales</li>
                  <li>Festivals et événements culturels</li>
                </ul>
              </div>

              <div class="service-process">
                <h3>Notre approche</h3>
                <div class="process-steps">
                  <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                      <h4>Brief détaillé</h4>
                      <p>Analyse de vos besoins et planning de l'événement</p>
                    </div>
                  </div>
                  <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                      <h4>Couverture live</h4>
                      <p>Reportage en temps réel avec équipe dédiée</p>
                    </div>
                  </div>
                  <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                      <h4>Post-production</h4>
                      <p>Sélection, retouche et livraison sous 48h</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="service-image">
              <img src="https://images.pexels.com/photos/2747449/pexels-photo-2747449.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Reportage événementiel" />
            </div>
          </div>

          <!-- Photographie Corporate -->
          <div class="service-detail" id="corporate">
            <div class="service-image">
              <img src="https://images.pexels.com/photos/1181671/pexels-photo-1181671.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Photographie corporate" />
            </div>
            
            <div class="service-content">
              <div class="service-header">
                <div class="service-icon">
                  <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                    <line x1="8" y1="21" x2="16" y2="21"></line>
                    <line x1="12" y1="17" x2="12" y2="21"></line>
                  </svg>
                </div>
                <div>
                  <h2>Photographie corporate</h2>
                  <p class="service-tagline">Valoriser votre image d'entreprise</p>
                </div>
              </div>
              
              <div class="service-description">
                <p>
                  Créez une image professionnelle forte avec nos services de photographie corporate. 
                  Portraits, photos d'équipe et documentation de votre environnement de travail.
                </p>
              </div>

              <div class="service-features">
                <h3>Nos prestations</h3>
                <ul>
                  <li>Portraits de dirigeants et collaborateurs</li>
                  <li>Photos d'équipe et organigrammes visuels</li>
                  <li>Reportage de locaux et espaces de travail</li>
                  <li>Documentation de processus métier</li>
                  <li>Photos pour supports de communication</li>
                  <li>Headshots pour réseaux sociaux professionnels</li>
                </ul>
              </div>

              <div class="service-pricing">
                <h3>Tarifs indicatifs</h3>
                <div class="pricing-grid">
                  <div class="price-item">
                    <h4>Portrait individuel</h4>
                    <div class="price">À partir de 150€</div>
                    <p>Séance 30min, 5 photos retouchées</p>
                  </div>
                  <div class="price-item">
                    <h4>Équipe (5-10 pers.)</h4>
                    <div class="price">À partir de 450€</div>
                    <p>Séance 1h, photos individuelles + groupe</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Production Vidéo -->
          <div class="service-detail" id="video">
            <div class="service-content">
              <div class="service-header">
                <div class="service-icon">
                  <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="23 7 16 12 23 17 23 7"></polygon>
                    <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                  </svg>
                </div>
                <div>
                  <h2>Production vidéo</h2>
                  <p class="service-tagline">Donnez vie à vos messages</p>
                </div>
              </div>
              
              <div class="service-description">
                <p>
                  De la conception à la diffusion, nous créons des contenus vidéo impactants 
                  pour vos campagnes de communication, formations et réseaux sociaux.
                </p>
              </div>

              <div class="service-features">
                <h3>Nos prestations</h3>
                <ul>
                  <li>Films institutionnels et corporate</li>
                  <li>Interviews et témoignages clients</li>
                  <li>Captation de conférences et formations</li>
                  <li>Contenus pour réseaux sociaux</li>
                  <li>Documentaires d'entreprise</li>
                  <li>Clips promotionnels et publicitaires</li>
                </ul>
              </div>

              <div class="service-equipment">
                <h3>Notre matériel</h3>
                <div class="equipment-grid">
                  <div class="equipment-item">
                    <h4>Caméras 4K</h4>
                    <p>Sony FX6, Canon C70</p>
                  </div>
                  <div class="equipment-item">
                    <h4>Audio professionnel</h4>
                    <p>Micros-cravates, perches</p>
                  </div>
                  <div class="equipment-item">
                    <h4>Éclairage LED</h4>
                    <p>Panneaux et projecteurs</p>
                  </div>
                  <div class="equipment-item">
                    <h4>Stabilisation</h4>
                    <p>Gimbals, steadicam</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="service-image">
              <img src="https://images.pexels.com/photos/1181472/pexels-photo-1181472.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Production vidéo" />
            </div>
          </div>

          <!-- Documentaire -->
          <div class="service-detail" id="documentaire">
            <div class="service-image">
              <img src="https://images.pexels.com/photos/1105666/pexels-photo-1105666.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Reportage documentaire" />
            </div>
            
            <div class="service-content">
              <div class="service-header">
                <div class="service-icon">
                  <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14,2 14,8 20,8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10,9 9,9 8,9"></polyline>
                  </svg>
                </div>
                <div>
                  <h2>Reportage documentaire</h2>
                  <p class="service-tagline">Raconter vos histoires avec authenticité</p>
                </div>
              </div>
              
              <div class="service-description">
                <p>
                  Nos reportages documentaires capturent l'essence de vos projets, métiers et valeurs 
                  avec une approche journalistique et artistique pour créer des récits authentiques.
                </p>
              </div>

              <div class="service-features">
                <h3>Nos prestations</h3>
                <ul>
                  <li>Reportages métiers et savoir-faire</li>
                  <li>Documentation de projets RSE</li>
                  <li>Portraits d'entrepreneurs</li>
                  <li>Immersion en entreprise</li>
                  <li>Couverture d'événements caritatifs</li>
                  <li>Documentaires institutionnels</li>
                </ul>
              </div>

              <div class="service-approach">
                <h3>Notre méthode documentaire</h3>
                <div class="approach-items">
                  <div class="approach-item">
                    <h4>Immersion</h4>
                    <p>Intégration dans votre environnement pour capturer l'authenticité</p>
                  </div>
                  <div class="approach-item">
                    <h4>Narration</h4>
                    <p>Construction d'un récit cohérent et engageant</p>
                  </div>
                  <div class="approach-item">
                    <h4>Émotion</h4>
                    <p>Mise en valeur de l'humain et des valeurs</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="process-section">
      <div class="container">
        <div class="section-header">
          <h2>Notre processus de travail</h2>
          <p>Une méthode éprouvée pour des résultats exceptionnels</p>
        </div>
        
        <div class="process-timeline">
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              </svg>
            </div>
            <div class="timeline-content">
              <h3>Consultation initiale</h3>
              <p>Échange détaillé sur vos besoins, objectifs et contraintes. Définition du brief créatif et technique.</p>
            </div>
          </div>
          
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 11H5a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h4m6-6h4a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-4m-6 0a2 2 0 0 0-2-2v-3a2 2 0 0 0 2-2m6 0a2 2 0 0 1 2-2v-3a2 2 0 0 1-2-2"></path>
              </svg>
            </div>
            <div class="timeline-content">
              <h3>Planification</h3>
              <p>Élaboration du plan de tournage, sélection de l'équipe et du matériel adapté à votre projet.</p>
            </div>
          </div>
          
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                <circle cx="12" cy="13" r="4"></circle>
              </svg>
            </div>
            <div class="timeline-content">
              <h3>Réalisation</h3>
              <p>Captation professionnelle avec notre équipe experte, respect des délais et de la discrétion.</p>
            </div>
          </div>
          
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 20h9M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
              </svg>
            </div>
            <div class="timeline-content">
              <h3>Post-production</h3>
              <p>Sélection, retouche et montage selon vos exigences. Validation avant livraison finale.</p>
            </div>
          </div>
          
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M7 10l5 5 5-5M12 15V3"></path>
              </svg>
            </div>
            <div class="timeline-content">
              <h3>Livraison</h3>
              <p>Remise des fichiers haute définition via plateforme sécurisée. Support et conseils d'utilisation.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Discutons de votre projet</h2>
          <p>Chaque projet est unique. Contactez-nous pour une consultation personnalisée et un devis sur mesure.</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-primary">Demander un devis</a>
            <a href="/portfolios" class="btn btn-secondary">Voir nos réalisations</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  main {
    margin-top: 70px;
  }

  .hero-services {
    background: linear-gradient(135deg, var(--color-primary), #1e40af);
    color: white;
    padding: var(--spacing-2xl) 0;
    text-align: center;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.9);
  }

  .services-section {
    padding: var(--spacing-2xl) 0;
  }

  .services-grid {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
  }

  .service-detail {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
    padding: var(--spacing-2xl);
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .service-detail:nth-child(even) {
    background: var(--color-bg-light);
  }

  .service-header {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .service-icon {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .service-header h2 {
    font-size: 2rem;
    margin-bottom: var(--spacing-xs);
  }

  .service-tagline {
    color: var(--color-accent);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .service-description {
    margin-bottom: var(--spacing-lg);
  }

  .service-description p {
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .service-features,
  .service-process,
  .service-pricing,
  .service-equipment,
  .service-approach {
    margin-bottom: var(--spacing-lg);
  }

  .service-features h3,
  .service-process h3,
  .service-pricing h3,
  .service-equipment h3,
  .service-approach h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
  }

  .service-features ul {
    list-style: none;
    padding: 0;
  }

  .service-features li {
    padding: 8px 0;
    border-bottom: 1px solid var(--color-border);
    position: relative;
    padding-left: 24px;
  }

  .service-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--color-success);
    font-weight: bold;
  }

  .service-features li:last-child {
    border-bottom: none;
  }

  .process-steps {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .step {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
  }

  .step-number {
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }

  .step-content h4 {
    margin-bottom: var(--spacing-xs);
    color: var(--color-primary);
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
  }

  .price-item {
    background: var(--color-bg-light);
    padding: var(--spacing-md);
    border-radius: var(--border-radius);
    text-align: center;
  }

  .price-item h4 {
    margin-bottom: var(--spacing-xs);
  }

  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
    margin-bottom: var(--spacing-xs);
  }

  .price-item p {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  .equipment-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--spacing-md);
  }

  .equipment-item {
    text-align: center;
    padding: var(--spacing-md);
    background: var(--color-bg-light);
    border-radius: var(--border-radius);
  }

  .equipment-item h4 {
    margin-bottom: var(--spacing-xs);
    color: var(--color-primary);
  }

  .equipment-item p {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  .approach-items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
  }

  .approach-item {
    padding: var(--spacing-md);
    background: var(--color-bg-light);
    border-radius: var(--border-radius);
  }

  .approach-item h4 {
    margin-bottom: var(--spacing-xs);
    color: var(--color-primary);
  }

  .approach-item p {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  .service-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius-lg);
  }

  .process-section {
    background: var(--color-bg-light);
    padding: var(--spacing-2xl) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .section-header p {
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .process-timeline {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-lg);
    background: white;
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
  }

  .timeline-icon {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-sm);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .timeline-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xs);
    color: var(--color-primary);
  }

  .timeline-content p {
    color: var(--color-text-light);
  }

  .cta-section {
    padding: var(--spacing-2xl) 0;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }

  .cta-content p {
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xl);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .service-detail {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
      padding: var(--spacing-lg);
    }

    .service-header {
      flex-direction: column;
      text-align: center;
    }

    .service-header h2 {
      font-size: 1.75rem;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .cta-content h2 {
      font-size: 2rem;
    }

    .timeline-item {
      flex-direction: column;
      text-align: center;
    }

    .pricing-grid,
    .equipment-grid,
    .approach-items {
      grid-template-columns: 1fr;
    }
  }
</style>