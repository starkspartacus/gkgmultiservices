---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Marquee from '../components/magicui/Marquee.astro';
import BoxRevealIsland from '../components/magicui/BoxRevealIsland.jsx';

---

<Layout title="GKG Reportage - Reporters Indépendants & Agences de Couverture d'Événements">
  <Header />
  
  <main>
    <!-- Hero Section with Video Background -->
    <section class="hero">
      <div class="hero-video-container">
        <video autoplay muted loop playsinline class="hero-video">
          <source src="/media/videos/hero.mp4" type="video/mp4">
        </video>
        <div class="hero-overlay"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <BoxRevealIsland client:only="react" width="100%">
            <h1 class="hero-title animate-fade-up">Capturer l'essence de vos événements</h1>
          </BoxRevealIsland>
          <p class="hero-subtitle animate-fade-up-delay-1">
            Plateforme de reporters indépendants et d'agences spécialisées dans la couverture professionnelle d'événements
          </p>
          <div class="hero-cta animate-fade-up-delay-2">
            <BoxRevealIsland client:only="react" width="fit-content">
              <a href="/portfolios" class="btn btn-primary btn-animated">
                <span>Découvrir nos portfolios</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </BoxRevealIsland>
            <a href="/contact" class="btn btn-secondary btn-animated text-white">
              <span>Demander un devis</span>
            </a>
          </div>
        </div>
      </div>
      <div class="scroll-indicator animate-bounce">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M7 13l3 3 7-7M7 6l3 3 7-7"/>
        </svg>
      </div>
    </section>

    <!-- Services Preview -->
    <section class="services-preview">
      <div class="container">
        <div class="section-header animate-on-scroll">
          <h2>Nos expertises</h2>
          <p>Des services professionnels adaptés à tous vos besoins</p>
        </div>
        
        <div class="grid grid-3">
          <div class="service-card animate-on-scroll" data-delay="0">
            <div class="service-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                <circle cx="12" cy="13" r="4"></circle>
              </svg>
            </div>
            <h3>Reportage événementiel</h3>
            <p>Couverture complète de vos événements d'entreprise, conférences, salons et lancements produit.</p>
            <a href="/services#evenementiel" class="service-link">En savoir plus</a>
          </div>
          
          <div class="service-card animate-on-scroll" data-delay="200">
            <div class="service-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                <line x1="8" y1="21" x2="16" y2="21"></line>
                <line x1="12" y1="17" x2="12" y2="21"></line>
              </svg>
            </div>
            <h3>Photographie corporate</h3>
            <p>Portraits professionnels, photos d'équipe et documentation de votre environnement de travail.</p>
            <a href="/services#corporate" class="service-link">En savoir plus</a>
          </div>
          
          <div class="service-card animate-on-scroll" data-delay="400">
            <div class="service-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="23 7 16 12 23 17 23 7"></polygon>
                <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
              </svg>
            </div>
            <h3>Production vidéo</h3>
            <p>Création de contenu vidéo professionnel pour vos campagnes de communication et réseaux sociaux.</p>
            <a href="/services#video" class="service-link">En savoir plus</a>
          </div>
        </div>
        
        <div class="section-cta animate-on-scroll">
          <a href="/services" class="btn btn-accent btn-animated">
            <span>Voir tous nos services</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Work -->
    <section class="featured-work">
      <div class="container">
        <div class="section-header animate-on-scroll">
          <h2>Travaux récents</h2>
          <p>Découvrez une sélection de nos réalisations les plus marquantes</p>
        </div>
        
        <div class="grid grid-2">
          <div class="work-item animate-on-scroll" data-delay="0">
            <div class="work-image">
              <img src="https://images.pexels.com/photos/2747449/pexels-photo-2747449.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Conférence tech" />
              <div class="work-overlay">
                <div class="work-content">
                  <span class="work-category">Événementiel</span>
                  <h3>Conférence Tech Paris 2024</h3>
                  <p>Couverture complète de l'événement tech de l'année</p>
                  <a href="/portfolios" class="btn btn-primary btn-sm">Voir le projet</a>
                </div>
              </div>
            </div>
          </div>
          
          <div class="work-item animate-on-scroll" data-delay="200">
            <div class="work-image">
              <img src="https://images.pexels.com/photos/1181396/pexels-photo-1181396.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Lancement produit" />
              <div class="work-overlay">
                <div class="work-content">
                  <span class="work-category">Corporate</span>
                  <h3>Lancement Produit Luxe</h3>
                  <p>Reportage exclusif pour une marque de haute couture</p>
                  <a href="/portfolios" class="btn btn-primary btn-sm">Voir le projet</a>
                </div>
              </div>
            </div>
          </div>
          
          <div class="work-item animate-on-scroll" data-delay="400">
            <div class="work-image">
              <img src="https://images.pexels.com/photos/1105666/pexels-photo-1105666.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Gala de charité" />
              <div class="work-overlay">
                <div class="work-content">
                  <span class="work-category">Documentaire</span>
                  <h3>Gala de Charité</h3>
                  <p>Documentation d'un événement caritatif prestigieux</p>
                  <a href="/portfolios" class="btn btn-primary btn-sm">Voir le projet</a>
                </div>
              </div>
            </div>
          </div>
          
          <div class="work-item animate-on-scroll" data-delay="600">
            <div class="work-image">
              <img src="https://images.pexels.com/photos/1181472/pexels-photo-1181472.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Séminaire d'entreprise" />
              <div class="work-overlay">
                <div class="work-content">
                  <span class="work-category">Corporate</span>
                  <h3>Séminaire d'Entreprise</h3>
                  <p>Reportage corporate pour une multinationale</p>
                  <a href="/portfolios" class="btn btn-primary btn-sm">Voir le projet</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
      <div class="container">
        <div class="stats-grid">
          <div class="stat-item animate-counter" data-target="500">
            <div class="stat-number">0</div>
            <div class="stat-label">Événements couverts</div>
          </div>
          <div class="stat-item animate-counter" data-target="150">
            <div class="stat-number">0</div>
            <div class="stat-label">Clients satisfaits</div>
          </div>
          <div class="stat-item animate-counter" data-target="25">
            <div class="stat-number">0</div>
            <div class="stat-label">Photographes experts</div>
          </div>
          <div class="stat-item animate-counter" data-target="10">
            <div class="stat-number">0</div>
            <div class="stat-label">Années d'expérience</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Articles -->
    <section class="latest-articles">
      <div class="container">
        <div class="section-header animate-on-scroll">
          <h2>Derniers articles</h2>
          <p>Actualités, conseils et retours d'expérience de nos experts</p>
        </div>
        
        <div class="grid grid-3">
          <article class="article-card animate-on-scroll" data-delay="0">
            <div class="article-image">
              <img src="https://images.pexels.com/photos/1181671/pexels-photo-1181671.jpeg?auto=compress&cs=tinysrgb&w=400&h=250&fit=crop" alt="Tendances photo 2024" />
              <div class="article-category">Tendances</div>
            </div>
            <div class="article-content">
              <h3>Les tendances photo événementielle 2024</h3>
              <p>Découvrez les nouvelles approches créatives qui marquent cette année...</p>
              <div class="article-meta">
                <span class="article-date">15 Mars 2024</span>
                <span class="article-read-time">5 min de lecture</span>
              </div>
              <a href="/articles" class="article-link">Lire l'article</a>
            </div>
          </article>
          
          <article class="article-card animate-on-scroll" data-delay="200">
            <div class="article-image">
              <img src="https://images.pexels.com/photos/2747449/pexels-photo-2747449.jpeg?auto=compress&cs=tinysrgb&w=400&h=250&fit=crop" alt="Réussir son événement" />
              <div class="article-category">Conseils</div>
            </div>
            <div class="article-content">
              <h3>Comment réussir la couverture de votre événement</h3>
              <p>Nos conseils d'experts pour une documentation parfaite de vos moments clés...</p>
              <div class="article-meta">
                <span class="article-date">10 Mars 2024</span>
                <span class="article-read-time">7 min de lecture</span>
              </div>
              <a href="/articles" class="article-link">Lire l'article</a>
            </div>
          </article>
          
          <article class="article-card animate-on-scroll" data-delay="400">
            <div class="article-image">
              <img src="https://images.pexels.com/photos/1181474/pexels-photo-1181474.jpeg?auto=compress&cs=tinysrgb&w=400&h=250&fit=crop" alt="Portrait corporate" />
              <div class="article-category">Technique</div>
            </div>
            <div class="article-content">
              <h3>L'art du portrait corporate moderne</h3>
              <p>Techniques et astuces pour des portraits professionnels authentiques...</p>
              <div class="article-meta">
                <span class="article-date">5 Mars 2024</span>
                <span class="article-read-time">6 min de lecture</span>
              </div>
              <a href="/articles" class="article-link">Lire l'article</a>
            </div>
          </article>
        </div>
        
        <div class="section-cta animate-on-scroll">
          <a href="/articles" class="btn btn-secondary btn-animated">
            <span>Voir tous les articles</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content animate-on-scroll">
          <h2>Prêt à donner vie à votre projet ?</h2>
          <p>Contactez-nous pour discuter de vos besoins et obtenir un devis personnalisé</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-primary btn-animated">
              <span>Demander un devis</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
            <a href="/portfolios" class="btn btn-secondary btn-animated">
              <span>Voir nos réalisations</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Brands Section -->
    <section class="brands-section py-24 bg-gradient-to-b from-gray-50 to-white">
      <div class="container mx-auto px-4">
        <div class="section-header text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl font-bold mb-6 bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">Ils nous font confiance</h2>
          <p class="text-gray-600 text-lg max-w-2xl mx-auto">Découvrez quelques-unes des marques prestigieuses avec lesquelles nous avons eu le plaisir de collaborer</p>
        </div>
        <Marquee className="py-12" />
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  main {
    margin-top: 70px;
  }

  /* Hero Section with Video */
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-video-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -2;
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.7);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.8), rgba(0, 0, 0, 0.6));
    z-index: -1;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    color: white;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xl);
    color: rgba(255, 255, 255, 0.9);
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    opacity: 0.8;
  }

  /* Animations */
  @keyframes fadeUpIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-10px) translateX(-50%);
    }
    60% {
      transform: translateY(-5px) translateX(-50%);
    }
  }

  .animate-fade-up {
    animation: fadeUpIn 1s ease-out;
  }

  .animate-fade-up-delay-1 {
    animation: fadeUpIn 1s ease-out 0.3s both;
  }

  .animate-fade-up-delay-2 {
    animation: fadeUpIn 1s ease-out 0.6s both;
  }

  .animate-bounce {
    animation: bounce 2s infinite;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Button Animations */
  .btn-animated {
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn-animated::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-animated:hover::before {
    left: 100%;
  }

  .btn-animated:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }

  .btn-animated svg {
    transition: transform 0.3s ease;
  }

  .btn-animated:hover svg {
    transform: translateX(5px);
  }

  /* Sections */
  .services-preview,
  .featured-work,
  .latest-articles {
    padding: var(--spacing-2xl) 0;
  }

  .featured-work {
    background: var(--color-bg-light);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .section-header p {
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Service Cards */
  .service-card {
    text-align: center;
    padding: var(--spacing-xl);
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .service-card:hover::before {
    transform: scaleX(1);
  }

  .service-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .service-icon {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    transition: all 0.3s ease;
  }

  .service-card:hover .service-icon {
    color: var(--color-accent);
    transform: scale(1.1);
  }

  .service-card h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-primary);
    font-weight: 500;
    margin-top: var(--spacing-sm);
    transition: var(--transition);
  }

  .service-link:hover {
    color: var(--color-accent);
  }

  /* Work Items */
  .work-item {
    position: relative;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    aspect-ratio: 3/2;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .work-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .work-image {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .work-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .work-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.9), rgba(0, 0, 0, 0.7));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--spacing-lg);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .work-item:hover .work-overlay {
    opacity: 1;
  }

  .work-item:hover .work-image img {
    transform: scale(1.1);
  }

  .work-category {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--spacing-sm);
  }

  .work-content h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .work-content p {
    margin-bottom: var(--spacing-md);
    color: rgba(255, 255, 255, 0.9);
  }

  .btn-sm {
    padding: 8px 16px;
    font-size: 0.9rem;
  }

  /* Stats Section */
  .stats {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-2xl) 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-xl);
    text-align: center;
  }

  .stat-item {
    transition: transform 0.3s ease;
  }

  .stat-item:hover {
    transform: translateY(-5px);
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-accent);
    margin-bottom: var(--spacing-xs);
  }

  .stat-label {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
  }

  /* Articles Section */
  .latest-articles {
    background: var(--color-bg-light);
  }

  .article-card {
    background: white;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .article-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .article-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .article-card:hover .article-image img {
    transform: scale(1.05);
  }

  .article-category {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--color-accent);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .article-content {
    padding: var(--spacing-lg);
  }

  .article-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }

  .article-content p {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
    font-size: 0.95rem;
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
    font-size: 0.85rem;
    color: var(--color-text-light);
  }

  .article-link {
    color: var(--color-primary);
    font-weight: 500;
    transition: var(--transition);
