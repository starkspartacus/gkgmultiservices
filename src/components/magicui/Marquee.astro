---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`relative w-full overflow-hidden bg-white rounded-lg border border-gray-200 mb-12 ${className}`} style="height: 44px; min-width: 0;">
  <div class="absolute inset-y-0 left-0 w-8 bg-gradient-to-r from-white to-transparent z-10 pointer-events-none"></div>
  <div class="absolute inset-y-0 right-0 w-8 bg-gradient-to-l from-white to-transparent z-10 pointer-events-none"></div>
  <div class="flex items-center h-full flex-nowrap">
    <div class="animate-marquee flex min-w-full items-center gap-6 px-4 flex-nowrap">
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2f/Google_2015_logo.svg/250px-Google_2015_logo.svg.png" alt="Google" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a9/Amazon_logo.svg/250px-Amazon_logo.svg.png" alt="Amazon" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/24/Samsung_Logo.svg/250px-Samsung_Logo.svg.png" alt="Samsung" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8c/Bank_of_America_logo.svg/250px-Bank_of_America_logo.svg.png" alt="Bank of America" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ad/HP_logo_2012.svg/250px-HP_logo_2012.svg.png" alt="HP" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
    </div>
    <div class="animate-marquee2 flex min-w-full items-center gap-6 px-4 flex-nowrap">
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2f/Google_2015_logo.svg/250px-Google_2015_logo.svg.png" alt="Google" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a9/Amazon_logo.svg/250px-Amazon_logo.svg.png" alt="Amazon" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/24/Samsung_Logo.svg/250px-Samsung_Logo.svg.png" alt="Samsung" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8c/Bank_of_America_logo.svg/250px-Bank_of_America_logo.svg.png" alt="Bank of America" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ad/HP_logo_2012.svg/250px-HP_logo_2012.svg.png" alt="HP" class="max-h-8 max-w-[64px] w-auto opacity-60 grayscale transition-all duration-300 hover:opacity-100 hover:grayscale-0" />
    </div>
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @keyframes marquee2 {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(0%);
    }
  }
  .animate-marquee {
    animation: marquee 45s linear infinite;
  }
  .animate-marquee2 {
    animation: marquee2 45s linear infinite;
  }
  .animate-marquee:hover,
  .animate-marquee2:hover {
    animation-play-state: paused;
  }
  @media (max-width: 768px) {
    div[style*='height: 44px'] {
      height: 28px !important;
    }
    .animate-marquee, .animate-marquee2 {
      gap: 0.5rem !important;
      padding-left: 0.25rem !important;
      padding-right: 0.25rem !important;
    }
    img {
      max-height: 18px !important;
      max-width: 40px !important;
    }
  }
</style> 